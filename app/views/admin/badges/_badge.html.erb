<tr>
  <td class="align-middle"><img src=<%="#{badge.image}" %>></td>
  <td class="align-middle"><%= Badge::BADGES_NAMES.key(badge.title.to_sym) + " #{badge.rule}" %></td>
  <td class="align-middle"><%= link_to 'Show', admin_badge_path(badge), class: 'badge badge-primary' %></td>
  <td class="align-middle">
    <%= link_to 'Edit', edit_admin_badge_path(badge), class: 'badge badge-primary' %>
  </td>
  <td class="align-middle">
    <%= link_to 'Delete', admin_badge_path(badge), class: 'badge badge-primary',
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
  </td>
</tr>